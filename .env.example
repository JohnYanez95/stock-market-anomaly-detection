# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# Per-Asset Subscription Tiers (basic, starter, developer, advanced)
# WebSocket requires at least 'starter' tier for each asset type
POLYGON_TIER_STOCKS=basic       # Default: basic (no WebSocket)
POLYGON_TIER_CRYPTO=basic       # Default: basic (no WebSocket)
POLYGON_TIER_INDICES=basic      # Default: basic (no WebSocket)
POLYGON_TIER_FOREX=basic        # Default: basic (no WebSocket)
POLYGON_TIER_OPTIONS=basic      # Default: basic (no WebSocket)
POLYGON_TIER_FUTURES=basic      # Default: basic (no WebSocket)

# Optional WebSocket URL Overrides (leave blank to use defaults)
# Only works if you have at least 'starter' tier for that asset
# POLYGON_WS_URL_STOCKS=wss://delayed.polygon.io/stocks
# POLYGON_WS_URL_CRYPTO=wss://delayed.polygon.io/crypto
# POLYGON_WS_URL_FOREX=wss://delayed.polygon.io/forex
# POLYGON_WS_URL_INDICES=wss://delayed.polygon.io/stocks
# POLYGON_WS_URL_OPTIONS=wss://delayed.polygon.io/options
# POLYGON_WS_URL_FUTURES=wss://delayed.polygon.io/futures

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=stock-anomaly-detection

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# Feature Store
FEAST_REPO_PATH=./feature_repo

# Database (if using external DB)
DATABASE_URL=sqlite:///./stock_anomaly.db